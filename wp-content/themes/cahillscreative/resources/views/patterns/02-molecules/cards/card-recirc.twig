{% if card_recirc.link.url %}
  {% set card_recirc_base_class = card_recirc.base_class|default('c-card-recirc') %}

  <a href="{{ card_recirc.link.url }}" class="{{ bem_classes(card_recirc_base_class, card_recirc.element, card_recirc.modifiers, card_recirc.extra) }}" {{ add_attributes(card_recirc.link.attributes) }}>
    {% if card_recirc.figure.image.src %}
      <div class="{{ bem_classes(card_recirc_base_class, 'image') }}">
        {% include "@atoms/images/image/figure.twig" with card_recirc %}
      </div>
    {% endif %}
    <div class="{{ bem_classes(card_recirc_base_class, 'content') }}">
      {% if card_recirc.eyebrow.text %}
        <div class="{{ bem_classes(card_recirc_base_class, 'eyebrow') }}">
          {% include "@atoms/text/eyebrow/eyebrow.twig" with card_recirc %}
        </div>
      {% endif %}
      {% if card_recirc.heading.text %}
        <div class="{{ bem_classes(card_recirc_base_class, 'heading') }}">
          {% include "@atoms/text/heading/heading.twig" with card_recirc %}
        </div>
      {% endif %}
      {% if card_recirc.meta.author.name %}
        <div class="{{ bem_classes(card_recirc_base_class, 'meta') }} u-space--half--top">
          {% include "@atoms/text/meta/meta.twig" with card_recirc %}
        </div>
      {% endif %}
    </div>
  </a>
{% endif %}
