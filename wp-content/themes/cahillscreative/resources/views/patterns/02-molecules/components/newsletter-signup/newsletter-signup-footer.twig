{% set newsletter_signup_footer_base_class = newsletter_signup_footer.base_class|default('c-newsletter-signup') %}

<div class="{{ bem_classes(newsletter_signup_footer_base_class, '', 'footer') }}" data-js-footer-sailthru-form-wrapper>
  <form class="{{ bem_classes(newsletter_signup_footer_base_class, 'form') }} js-hide-success" data-js-footer-sailthru-form="" action="" method="post">
    <fieldset class="o-fieldset">
      <label class="o-form-item__label is-vishidden" for="o-form-item__email">Enter Email Address</label>
      <input class="o-form-item__email" type="email" placeholder="Enter email address" name="sailthru-email" id="site-footer-newletter-email" aria-label="Email Address">
      <input type="hidden" name="sailthru-registration-source" value="navigation_footer">
      <input class="form-checkbox is-hidden" type="checkbox" name="what_you_missed" value="what_you_missed" checked>
      <input id="footer-recaptcha" type="hidden" name="footer-recaptcha" value="" />
      <input class="o-form-item__submit" type="submit" name="op" value="Sign Up" />
    </fieldset>
    <div class="{{ bem_classes(newsletter_signup_footer_base_class, 'recaptcha') }} o-small">
      <div class="{{ bem_classes(newsletter_signup_footer_base_class, 'error') }} js-nl-signup-error is-hidden"></div>
      <div class="{{ bem_classes(newsletter_signup_footer_base_class, 'recaptcha-message') }}">{{ recapthca_message }}</div>
      <div class="{{ bem_classes(newsletter_signup_footer_base_class, 'recaptcha-wrap') }}" id="footer-recaptcha-div"></div>
    </div>
  </form>
  <div class="{{ bem_classes(newsletter_signup_footer_base_class, 'success') }} o-small js-nl-signup-success is-hidden">Thanks for signing up! Find more newsletters on our <a href="{{ newsletter_link }}">newsletter sign-up page</a>.</div>
</div>