{% set page_header_base_class = page_header.base_class|default('c-page-header-podcast') %}
{% set cluster = post.terms('cluster')[0] %}

<div class="{{ bem_classes(page_header_base_class, page_header.element, page_header.modifiers, page_header.extra) }}">
  <a href="{{ post.link }}" class="{{ bem_classes(page_header_base_class, 'icon') }} js-play-podcast">
    {% include "@atoms/images/icons/icon.twig" with {
      "icon": {
        "title": "Video Circle",
        "name": "video-circle",
        "modifiers": "xxlarge"
      }
    } %}
  </a>
  <div class="{{ bem_classes(page_header_base_class, 'content') }}">
    {% include "@atoms/misc/presented-by.twig" with {
      "presented_by": {
        "logo": {
          "base_url": true,
          "image": {
            "src": Image(post.advertiser_logo).src,
            "alt": Image(post.advertiser_logo).alt
          }
        }
      }
    } %}
    {% include "@atoms/text/kicker/kicker.twig" with {
      "kicker": {
        "text": cluster.name,
        "link": cluster.link
      }
    } %}
    {% include "@atoms/text/eyebrow/eyebrow.twig" with {
      "eyebrow": {
        "sponsored": post.is_native_advertising,
        "sponsor": post.native_advertising_eyebrow
      }
    } %}
    {% include "@atoms/text/meta/meta.twig" with {
      "meta": {
        "date": post.date
      }
    } %}
    {% include "@atoms/text/heading/heading.twig" with {
      "heading": {
        "level": "1",
        "size": "xl",
        "type": "primary",
        "text": post.display_title is not empty ? post.display_title : post.title
      }
    } %}
  </div>
</div>
