{% set page_header_base_class = page_header.base_class|default('c-page-header') %}

{% if page_header.heading.text or page_header.dek.text %}
  <div class="{{ bem_classes(page_header_base_class, page_header.element, page_header.modifiers, page_header.extra) }} l-container--m u-text-align--center u-spacing--half">
    {% include "@atoms/images/icons/icon.twig" with {
      "icon": {
        "title": page_header.icon.title,
        "name": page_header.icon.name,
        "modifiers": "large",
        "extra": [bem_classes(page_header_base_class, 'icon'), "u-space--half--bottom"]
      }
    } %}
    {% include "@atoms/text/kicker/kicker.twig" with {
      "kicker": {
        "text": page_header.kicker.text,
        "extra": bem_classes(page_header_base_class, 'kicker')
      }
    } %}
    {% include "@atoms/text/heading/heading.twig" with {
      "heading": {
        "level": "1",
        "size": "xl",
        "type": "primary",
        "text": page_header.heading.text,
        "extra": bem_classes(page_header_base_class, 'heading')
      }
    } %}
    {% include "@atoms/text/dek/dek.twig" with {
      "dek": {
        "text": page_header.dek.text,
        "modifiers": "large",
        "extra": bem_classes(page_header_base_class, 'dek')
      }
    } %}
  </div>
{% endif %}