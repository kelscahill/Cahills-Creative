{% if post.terms('affiliate_tag') %}
  {% set tags = post.terms('affiliate_tag') %}
{% elseif post.terms('work_tag') %}
  {% set tags = post.terms('work_tag') %}
{% else %}
  {% set tags = post.terms('tags') %}
{% endif %}

{% if tags %}
  <div class="tags">
    {% for term in tags %}
      <span class="color--gray font--s">{{ term.name }}{% if not loop.last %}, {% endif %}</span>
    {% endfor %}
  </div>
{% endif %}
