<div class="row work-grid bkg-tan">
<%
	function getFolderData() {
	    var obj = public;
	    for (var j = 0; j < current.path.length - 1; j++) {
	        if (typeof(obj[current.path[j]]) === "undefined") {
	            return null;
	        }
	        obj = obj[current.path[j]];
	    }
	    return obj._data;
	}

	var pages = getFolderData();
	var pathToPage = current.path.slice(0, current.path.length - 1).join("/");

	if (typeof(pages) !== "undefined") {
	    var validPages = [];
	    for (page in pages) {
	        if (page != "index") {
	            pages[page].url = uri + pathToPage + "/" + page
	            validPages.push(pages[page]);
	        }
	    }
	    if (validPages.length > 0) { 
		%>
			<% 	for(page in validPages) { %>
				<a href="<%- validPages[page].url %>" class="" style="background-image: url('<%- imagesUri %><%- validPages[page].imagePath %>thumbnail.jpg');">
					<div class="overlay">
						<div class="content">
							<span class="icon"><i class="fa fa-search"></i></span>
							<h3><%= validPages[page].title %></h3>
							<hr />
							<% for (var i=0; i<validPages[page].services.length; i++) { %>
								<em><%- validPages[page].services[i] %></em>
							<% } %>
						</div>
					</div>
				</a>
			<% } %>
		<% } %>			
	<% } %>
</div>

