{% if posts %}
  <div class="grid grid--full">
    {% for post in posts %}
      {% set category = "test" %}
      {% include ['01-molecules/blocks/block-'~post.post_type~'.twig', '01-molecules/blocks/block.twig'] %}
    {% endfor %}
  </div>
  {{ function('do_shortcode', '[ajax_load_more tag="'~ tag ~'" container_type="div" post_type="'~ post_type ~'" scroll="true" transition_container="false" button_label="Load More" posts_per_page="12" offset="12"]') }}
{% else %}
 <p>Sorry, there are no posts at this time.</p>
{% endif %}