{% if section.accordion %}
  <div class="accordion layout-container narrow narrow--l spacing--double">
    {% include "01-molecules/components/section--header.twig"
      with {
        section_header: {
          kicker: section.accordion_section_kicker,
          title: section.accordion_section_title
        }
      }
    %}
    <div class="accordion spacing">
      <div class="accordion--inner space--half-bottom">
        {% for item in section.accordion %}
          <div class="accordion-item">
            <div class="accordion-item__title js-toggle-parent">
              <h4 class="font--primary--m">{{ item.accordion_title }}</h4>
              <span class="accordion-item__toggle spacing--zero"></span>
            </div>
            <div class="accordion-item__body article__body spacing padding--zero">
              {{ item.accordion_body }}
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
    {% include "01-molecules/components/section--footer.twig"
      with {
        section_footer: {
          description: section.accordion_section_description,
          button: section.accordion_section_cta
        }
      }
    %}
  </div>
{% endif %}