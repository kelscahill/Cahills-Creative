{% if post.thumbnail %}
  {% set img_id = Image(post.thumbnail).id %}
  {% set image_class = ' background-image--' ~ img_id %}
  {% set img_src_s = Image(post.thumbnail).src|resize(550) %}
  {% set img_src_m = Image(post.thumbnail).src|resize(1200) %}
  {% set img_src_l = Image(post.thumbnail).src|resize(1500) %}
  {% set img_src_xl = Image(post.thumbnail).src|resize(1800) %}
{% else %}
  {% set image_class = ' background-image--default' %}
{% endif %}
<style>
  {{ '.background-image--' ~ img_id }} {
    background-image: url('{{ img_src_s }}');
  }
  @media(min-width: 550px) {
    {{ '.background-image--' ~ img_id }} {
      background-image: url('{{ img_src_m }}');
    }
  }
  @media(min-width: 1200px) {
    {{ '.background-image--' ~ img_id }} {
      background-image: url('{{ img_src_l }}');
    }
  }
  @media(min-width: 1500px) {
    {{ '.background-image--' ~ img_id }} {
      background-image: url('{{ img_src_xl }}');
    }
  }
</style>
<section class="section section__hero background--cover{{ image_class }}">
  <div class="section__her-inner spacing">
    {% if post.category %}
      <div class="kicker font--primary--s color--white">{{ post.category }}</div>
      <hr class="divider background-color--white" />
    {% endif %}
    <h1 class="section__hertitle font--secondary--xl color--white">{{ post.title }}</h1>
    {% if is_front_page %}
      <section class="rw-wrapper">
				<div class="rw-words">
					<span class="font--primary--m color--white">websites that kick ass</span>
					<span class="font--primary--m color--white">logos that mean something</span>
					<span class="font--primary--m color--white">brands to stand out from the crowd</span>
					<span class="font--primary--m color--white">messaging that tells a story</span>
					<span class="font--primary--m color--white">print that makes people take notice</span>
				</div>
			</section>
    {% endif %}
    {% if post.preview %}
      <p class="section__hero excerpt color--white">{{ post.preview }}</p>
    {% endif %}
  </div>
</section>
